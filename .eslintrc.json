{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": [
    "react"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "warn",
      "never"
    ],
    "no-console": ["error", {
      "allow": ["log", "warn", "error"]
    }],

    "no-unused-vars": "warn",

    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
